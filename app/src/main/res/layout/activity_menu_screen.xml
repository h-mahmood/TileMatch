<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/BlueColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="MenuScreen">

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:textSize="50dp"
        android:text="Settings"
        android:id="@+id/SettingsButton"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="settingButtonClick"
        android:layout_marginBottom="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/PlayButton"
        android:layout_alignStart="@+id/PlayButton" />

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:textSize="50dp"
        android:text="Exit"
        android:id="@+id/ExitButton"
        android:background="@drawable/button_background"
        android:onClick="exitButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/SettingsButton"
        android:layout_alignStart="@+id/SettingsButton"
        android:layout_marginBottom="90dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:textSize="50dp"
        android:text="Play"
        android:id="@+id/PlayButton"
        android:layout_above="@+id/SettingsButton"
        android:background="@drawable/button_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:onClick="playButtonClick" />
</RelativeLayout>
