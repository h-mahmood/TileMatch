<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/BlueColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="MenuScreen">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/menu_logoLayout">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/menu_logo" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tile Match"
            android:textSize="90dp"
            android:textColor="@color/MaizeColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/menu_logo"
            android:layout_toEndOf="@+id/menu_logo"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/menu_logoLayout" >

        <Button
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:textSize="50dp"
            android:text="Play"
            android:id="@+id/PlayButton"
            android:background="@drawable/button_background"
            android:onClick="playButtonClick"
            android:layout_above="@+id/SettingsButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:textSize="50dp"
            android:text="Settings"
            android:id="@+id/SettingsButton"
            android:background="@drawable/button_background"
            android:onClick="settingButtonClick"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/PlayButton"
            android:layout_alignStart="@+id/PlayButton"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:textSize="50dp"
            android:text="Exit"
            android:id="@+id/ExitButton"
            android:background="@drawable/button_background"
            android:onClick="exitButtonClick"
            android:layout_alignTop="@+id/SettingsButton"
            android:layout_alignLeft="@+id/SettingsButton"
            android:layout_alignStart="@+id/SettingsButton"
            android:layout_marginTop="160dp" />


    </RelativeLayout>


</RelativeLayout>
