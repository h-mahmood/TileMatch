<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:key="select_difficulty"
        android:layout="@xml/settings_layout"
        android:title="@string/pref_difficulty_title"
        android:summary="@string/pref_difficulty_summary"
        android:defaultValue="2"
        android:entries="@array/pref_difficulty_levels"
        android:entryValues="@array/pref_difficulty_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <Preference
        android:key="select_picture"
        android:layout="@xml/settings_layout"
        android:title="@string/pref_picture_title"
        android:summary="@string/pref_picture_summary"
        android:defaultValue="@string/pref_default_picture_location" />

    <PreferenceCategory
        android:title="High Scores"
        android:layout="@layout/stats_layout" />

    <Preference
        android:key="easy_score"
        android:layout="@xml/settings_layout" />

    <Preference
        android:key="medium_score"
        android:layout="@xml/settings_layout" />

    <Preference
        android:key="hard_score"
        android:layout="@xml/settings_layout" />

</PreferenceScreen>
